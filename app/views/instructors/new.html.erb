<h1>New Instructor</h1>

<%= form_for @instructor do |f| %>

  <p>
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
  </p>
  <p>
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
  </p>
  <p>
      <%= f.label :email %>
      <%= f.text_field :email %>
  </p>
  <p>
      <%= f.label :username %>
      <%= f.text_field :username %>
  </p>
  <p>
      <%= f.label :password %>
      <%= f.password_field :password %>
  </p>
  <p>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
  </p>

  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image, id: :instructor_image %>
  </div>



<br>

<div>
  <fb:login-button scope="public_profile,email" onlogin="checkLoginState();" data-auto-logout-link="true">
  </fb:login-button>
</div>

  <div id="status">
  </div>

<tr>

</tr>

  <p>
      <%= f.submit 'Create my Account'%>
  </p>
<% end %>
<%= link_to 'Back', :back %>
