<h1>Courses</h1>

<table>
  <thead>
    <tr>
      <th>Course Photo</th>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= image_tag course.image.url(:thumb) %></td>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<td><%#= link_to 'Done', instructor_path(current_instructor)%></td>
