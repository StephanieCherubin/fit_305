          <a>Welcome&nbsp;&nbsp;&nbsp;<%= current_instructor.first_name %> </a>&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to 'Log Out', logout_path %>
        <% else %>

          <%= link_to 'Log In', login_path%>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= link_to 'Sign Up', signup_path %>&nbsp;&nbsp;
    <% end %>

