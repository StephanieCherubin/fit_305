<!--Current Courses -->
<table>
  <thead>
    <tr>
      <h4>
      <th>Course Photo</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Date</th>
      </h4>

    </tr>
  </thead>

  <tbody>
    <% courses.each do |course| %>
      <tr>
        <td><%= image_tag course.image.url(:thumb) %></td>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= course.price %></td>
        <td><%= course.date %></td>
        <td><%= link_to 'Show', course %></td>

        <!-- <td><%= link_to 'Edit', edit_course_path(course) %></td> -->
        <td><%= link_to 'Remove', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
