<!--Current Courses -->
<table>
  <thead>
    <tr>
      <th>Course Photo</th>
      <th>Name</th>
      <th>Description</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% courses.each do |course| %>
      <tr>
        <td><%= image_tag course.image.url(:thumb) %></td>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= course.date %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%#= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Remove', course, method: :delete} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
