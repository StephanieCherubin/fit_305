
<h1>Courses</h1>



<table>
  <thead>
    <tr>
      <th>Course Photo</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <div class="row">
      <div class="col-xs-6 col-md-4">
        <% @courses.each do |course| %>
        <tr>

        <td><%= image_tag course.image.url(:thumb) %></td>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= course.price %></td>
        <td><%= course.date %></td>
        <td><%= link_to 'Learn more', course_path(course) %></td>
        <td><%= link_to 'Purchase', new_charge_path %></td>
        <td><%#= link_to 'Edit', edit_course_path(course) %></td>
        <td><%#= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        </tr>
        <% end %>
      </div>
    </div>
  </tbody>
</table>

